    div.d-flex.justify-content-between
      h1 #{title}
      div.d-flex.gap-sm
        button.btn.btn-outline-info &nbsp;EDIT&nbsp;
        button.btn.btn-outline-danger DELETE
    div
      p $#{product.price}
      br
      p #{product.description}
      br
      p #{product.brand}